<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile_activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/FrontProfile"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="105dp"
            android:layout_height="110dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/mujer"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/TextNameProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Carol Danvers"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textEmailProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nav_header_subtitle"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
           />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDPersonales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos Personales:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="#800000"
            android:textStyle="bold"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"/>
        <ImageView
            android:id="@+id/IcoEscuela_Profesional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/universidad"
            android:layout_below="@+id/textDPersonales"
            android:paddingLeft="@dimen/activity_horizontal_margin" />
            />

        <TextView
            android:id="@+id/textEProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingenieria de Sistemas "
            android:layout_below="@+id/textDPersonales"
            android:layout_toRightOf="@+id/IcoEscuela_Profesional"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000000"
            android:textSize="@dimen/profiletext"/>

        <ImageView
            android:id="@+id/Ico_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_email"
            android:layout_below="@+id/IcoEscuela_Profesional"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CarolDanvers@uandina.edu.pe"
            android:layout_below="@+id/IcoEscuela_Profesional"
            android:layout_toRightOf="@+id/Ico_Email"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000000"
            android:textSize="@dimen/profiletext"/>
        <ImageView
            android:id="@+id/IcoDocIdentidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_documentoid"
            android:layout_below="@+id/Ico_Email"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47282631"
            android:layout_below="@+id/Ico_Email"
            android:layout_toRightOf="@+id/IcoDocIdentidad"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000000"
            android:textSize="@dimen/profiletext"/>
        <ImageView
            android:id="@+id/IcoFechaNac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_fechanac"
            android:layout_below="@+id/IcoDocIdentidad"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>
        <TextView
            android:id="@+id/texteDateBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 - 09 - 1995"
            android:layout_below="@+id/IcoDocIdentidad"
            android:layout_toRightOf="@+id/IcoFechaNac"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000000"
            android:textSize="@dimen/profiletext"/>
        <ImageView
            android:id="@+id/IcoGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_genero"
            android:layout_below="@+id/IcoFechaNac"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Femenino"
            android:layout_toRightOf="@+id/IcoGenero"
            android:layout_below="@+id/IcoFechaNac"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000000"
            android:textSize="@dimen/profiletext"/>
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@android:color/darker_gray"
       android:layout_marginTop="@dimen/activity_vertical_margin"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp">
   </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textDContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos de Contacto:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="#800000"
            android:textStyle="bold"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"/>
        <ImageView
            android:id="@+id/ico_Direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDContacto"
            android:src="@drawable/icon_direcction"
            android:paddingLeft="@dimen/activity_vertical_margin"/>

        <EditText
            android:id="@+id/textDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDContacto"
            android:layout_toRightOf="@+id/ico_Direction"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/econ_edit"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="Avenida la cultura 393 - A  "
            android:textSize="@dimen/profiletext"
            />
        <ImageView
            android:id="@+id/IcoTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ico_Direction"
            android:src="@drawable/ic_call_black_24dp"
            android:paddingLeft="@dimen/activity_vertical_margin"/>
        <EditText
            android:id="@+id/textTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ico_Direction"
            android:layout_toRightOf="@+id/IcoTelefono"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/econ_edit"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:text="964281856  "
            android:textSize="@dimen/profiletext"
            />

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/textTelefono"
            app:passwordToggleEnabled="true">

            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Contraseña"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ctn_RPassw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:passwordToggleEnabled="true">
                <EditText android:id="@+id/input_reEnterPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Confirmar Contraseña"/>
            </android.support.design.widget.TextInputLayout>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Guardar datos"
        android:textSize="@dimen/profiletext" />
</LinearLayout>
</ScrollView>